{
  "name": "solana-address-monitor",
  "version": "1.0.0",
  "description": "Real-time Solana wallet address activity monitor with transaction analysis and market data",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node --watch src/index.js",
    "test": "node tests/unit/*.js",
    "test:unit": "node tests/unit/*.js",
    "test:integration": "node tests/integration/*.js",
    "test:debug": "node tests/debug/*.js",
    "test:all": "npm run test:unit && npm run test:integration"
  },
  "keywords": [
    "solana",
    "blockchain",
    "monitor",
    "wallet",
    "trading",
    "defi"
  ],
  "author": "Solana Monitor",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "ws": "^8.14.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 